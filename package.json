{
	"name": "@ariesclark/eslint-config",
	"type": "module",
	"version": "2.1.1-canary.2",
	"private": false,
	"description": "An opinionated ESLint Configuration",
	"author": "ariesclark",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/ariesclark/eslint-config.git"
	},
	"keywords": [
		"eslint",
		"eslint-config",
		"typescript"
	],
	"exports": {
		".": "./dist/index.js",
		"./*": "./dist/configs/*.js"
	},
	"main": "index.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist",
		"eslint-patch.js",
		"index.js"
	],
	"scripts": {
		"build": "rm dist/* -rf && tsc",
		"canary": "pnpm build && pnpm version prerelease --preid=canary && pnpm publish --tag canary --no-git-checks",
		"inspect": "eslint-config-inspector --config eslint.config.ts"
	},
	"peerDependencies": {
		"@next/eslint-plugin-next": "^15",
		"eslint": "^9",
		"eslint-plugin-tailwindcss": "^3"
	},
	"peerDependenciesMeta": {
		"@next/eslint-plugin-next": {
			"optional": true
		},
		"eslint-plugin-tailwindcss": {
			"optional": true
		}
	},
	"dependencies": {
		"@antfu/eslint-config": "^3.8.0",
		"eslint-flat-config-utils": "^0.4.0",
		"local-pkg": "^0.5.0"
	},
	"devDependencies": {
		"@eslint/config-inspector": "^0.5.5",
		"@types/eslint": "^9.6.1",
		"@types/eslint__eslintrc": "^2.1.2",
		"@types/eslint__js": "^8.42.3",
		"@types/node": "^22.8.1",
		"typescript": "^5.6.3"
	}
}
